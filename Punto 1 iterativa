#include <stdio.h>

int main() {
    int num, i, factorial = 1;
    
    printf("Ingrese un numero entero: ");
    scanf("%d", &num);

    if (num < 0) {
        printf("El factorial no esta definido para numeros negativos.\n");
    } else {
        for (i = 1; i <= num; ++i) {
            factorial *= i;
        }
        printf("El factorial de %d es %d\n", num, factorial);
    }

    return 0;
}
